---
import CTA from '../components/CTA.astro';
import { Image } from 'astro:assets';

const {
  imageSrc,
  title,
  date,
  location,
  buttonLabel = 'Mehr Infos',
  buttonHref = '#',
} = Astro.props;
---

<article class="flex flex-col bg-[var(--color-cream-bg)] overflow-hidden">
  <!-- Imagen destacada -->
  <div class="w-full aspect-[4/3] overflow-hidden aspect-square">
    <Image
        src={imageSrc}
        alt={title}
        widths={[400, 800, 1200]}
        formats={['avif', 'webp', 'jpeg']}
        class="w-full h-full object-cover object-center"
        loading="lazy"
        decoding="async"
      />
  </div>

  <!-- Contenido con overlap -->
<div class="-mt-20 mx-auto max-w-[85%] bg-[var(--color-cream-bg)] p-6 shadow-sm relative flex flex-col items-center text-center gap-4">
  <div>
    <h3 class="italic font-semibold text-2xl md:text-3xl text-[var(--color-black)] leading-snug"
    style="font-family: var(--font-editorial);">
      {title}
    </h3>
    <p class="text-xl text-[var(--color-black)] italic"
   style="font-family: var(--font-garamond);">
      {date} {location}
    </p>
  </div>

  <div class="pt-2">
    <CTA
      label={buttonLabel}
      href={buttonHref}
      color="cream"
      border={true}
      size="small"
    />
  </div>
</div>
</article>