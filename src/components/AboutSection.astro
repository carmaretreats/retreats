---
interface Props {
  subtitle?: string;
  title?: string;
  text: string;
  image: string; 
  imageAlt?: string;
  reverse?: boolean;
}

const {
  subtitle,
  title = "Ãœber uns",
  text,
  image,
  imageAlt = "Portrait",
  reverse = false,
} = Astro.props;

const textOrder = reverse ? 'order-2 md:order-1' : 'order-1';
const imageOrder = reverse ? 'order-1 md:order-2 justify-start' : 'justify-end';
---

<section id="mehr-uber-uns" class="w-full bg-cream-bg text-dark-brown font-sans">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pb-[50px]">
    {subtitle && (
      <p class="uppercase section-label text-[var(--color-dark-brown)] mb-8">
        {subtitle}
      </p>
    )}
    {title && (
      <h2 style="font-family: 'EditorialOld', sans-serif; font-style: italic;" class="heading-main mb-10">
        {title}
      </h2>
    )}

    <div class="flex flex-col md:flex-row md:items-start gap-8">
      <div class={`w-full md:w-2/3 space-y-4 relative ${textOrder}`}>
        <div class="md:hidden float-right ml-4 mb-2 w-[120px] h-[120px] overflow-hidden">
          <img src={image} alt={imageAlt} class="w-full h-full object-cover" loading="lazy" decoding="async" />
        </div>
        <div class="body-text text-dark-brown">
          <p class="whitespace-pre-line">{text}</p>
        </div>
      </div>

      <div class={`hidden md:flex w-full md:w-1/3 ${imageOrder}`}>
        <div class="max-w-sm overflow-hidden">
          <img src={image} alt={imageAlt} class="w-full h-auto object-cover" loading="lazy" decoding="async" />
        </div>
      </div>
    </div>
  </div>
</section>