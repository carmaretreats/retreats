---
import RetreatMiniCard from '../components/RetreatMiniCard.astro';
import data from '../content/retreats-page.json';

const sectionData = data.nextRetreatsSection;
---

<section id="next-retreats" class="bg-[var(--color-cream-bg)] section">
  <div class="section-inner">
    <div class="text-left mb-12">
      <h2 class="uppercase section-label text-[var(--color-dark-brown)] mb-8">
        {sectionData.heading}
      </h2>
    </div>
  
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-stretch">
      {sectionData.retreatCards.map(card => (
        <RetreatMiniCard
          image={card.image}
          title={card.title}
          date={card.date}
          location={card.location}
          description={card.description}
          buttonLabel={card.button.label}
          buttonHref={card.button.href}
          imageShape={card.imageShape}
        />
      ))}
    </div>
  </div>
</section>