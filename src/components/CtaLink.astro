---
const {
  href = '#mehr',
  label = 'MEHR ERFAHREN',
  color = 'black',
} = Astro.props;

const textColorClass = color === 'white'
  ? 'text-[var(--color-white)] hover:text-[var(--color-accent-orange)]'
  : 'text-[var(--color-black)] hover:text-[#bb421d]';
---

<a
  href={href}
  @click.prevent="
    document.querySelector(href)?.scrollIntoView({ behavior: 'smooth' });
  "
  class="button-text relative inline-block pb-1 transition-colors duration-300
         after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-full
         after:bg-[var(--color-accent-orange)] after:rounded-full
         hover:text-[#bb421d]"
>
  {label}
</a>