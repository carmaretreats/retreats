---
import RetreatCard from './RetreatCard.astro';
import data from '../content/retreats-page.json';

const sectionData = data.retreatsSection;
---

<section id="retreats" class=" section bg-cream-bg text-dark-brown font-sans">
  <div class="section-inner">
    <div class="w-full flex flex-col gap-10 md:gap-16">

      <div class="w-full">
        <p class="uppercase section-label text-[var(--color-dark-brown)] mb-8">{sectionData.label}</p>
        <h2 style="font-family: 'EditorialOld', sans-serif; font-style: italic;" class="heading-main">
          {sectionData.heading}
        </h2>
        {sectionData.introParagraph && (
          <p class="body-text hidden md:block whitespace-pre-line mt-6">
            {sectionData.introParagraph}
          </p>
        )}
      </div>
  
      {sectionData.retreats.map(retreat => (
        <RetreatCard
          retreatId={retreat.id}
          layout={retreat.layout}
          date={retreat.date}
          introParagraphs={retreat.intro}
          priceContent={retreat.priceInfo}
          includedContent={retreat.includedInfo}
          locationContent={retreat.locationInfo}
          carouselImages={retreat.carouselImages}
          ctaLabel={retreat.cta.label}
          ctaHref={retreat.cta.href}
        />
      ))}
  
    </div>
  </div>
</section>