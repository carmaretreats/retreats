---
import Carousel from '../components/Carousel.astro';
import Cta from '../components/CTA.astro';

import imgjan1 from '../assets/images/january/Hikkaduwa01.webp';
import imgjan2 from '../assets/images/january/Hikkaduwa02.webp';
import imgjan3 from '../assets/images/january/Hikkaduwa03.webp';
import imgjan4 from '../assets/images/january/Hikkaduwa04.webp';
import imgjan5 from '../assets/images/january/Hikkaduwa05.webp';
import imgjan6 from '../assets/images/january/Hikkaduwa06.webp';
import imgjan7 from '../assets/images/january/Hikkaduwa07.webp';

export const januaryImages = [
  { src: imgjan1, label: '' },
  { src: imgjan2, label: '' },
  { src: imgjan3, label: '' },
  { src: imgjan4, label: '' },
  { src: imgjan5, label: '' },
  { src: imgjan6, label: '' },
  { src: imgjan7, label: '' },
];

import img1 from '../assets/images/february/Ahangama01.webp';
import img2 from '../assets/images/february/Ahangama02.webp';
import img3 from '../assets/images/february/Ahangama03.webp';
import img4 from '../assets/images/february/Ahangama04.webp';
import img6 from '../assets/images/february/Ahangama06.webp';
import img9 from '../assets/images/february/Ahangama09.webp';
import img11 from '../assets/images/february/Ahangama11.webp';
import img12 from '../assets/images/february/Ahangama12.webp';
import img13 from '../assets/images/february/Ahangama13.webp';
import img14 from '../assets/images/february/Ahangama14.webp';

export const februaryImages = [
  { src: img1, label: '' },
  { src: img2, label: '' },
  { src: img3, label: '' },
  { src: img4, label: '' },
  { src: img6, label: '' },
  { src: img9, label: '' },
  { src: img11, label: '' },
  { src: img12, label: '' },
  { src: img13, label: '' },
  { src: img14, label: '' },
];
---

<!-- UnterkunftPreise Section -->
<section id="unterkunft-preise" class="section bg-cream-bg text-black">
  <div class="section-inner">
    <!-- Section Title -->
    <div class="max-w-6xl mx-auto text-left mb-12">
      <p class="uppercase section-label text-[var(--color-black)] mb-8">
        Die Infos
      </p>
      <h2 style="font-family: 'EditorialOld', sans-serif; font-style: italic;" class="heading-main">
        Unterkunft & Preise
      </h2>
    </div>
  
    <!-- Retreat 1 - Hikkaduwa -->
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-8 mb-16 items-start">
      <!-- Text -->
      <div class="w-full md:w-1/2 font-sans text-left space-y-2 order-2 md:order-1">
        <h3 class="heading-sub italic mb-4 md:mb-6 text-black">
          Hikkaduwa Januar
        </h3>
        <p class="text-black body-text">Einzelzimmer<span class="float-right">500 €</span></p>
        <p class="text-black body-text">Doppelbett im Dreibettzimmer <span class="float-right">350 €</span></p>
        <p class="text-black body-text">Stockbetten im Dreibettzimmer <span class="float-right">200 €</span></p>
        <hr class="my-3 border-accent-orange" />
        <p class="text-black body-text italic">plus Retreatgebühr</p>
        <p class="text-black body-text">Pro Teilnehmer <span class="float-right">1100 €</span></p>

        <div class="flex justify-start pt-6">
          <Cta label="Jetzt Buchen" dataRetreat="january" href="#kontakt" color="orange" />
        </div>
      </div>

  
      <!-- Carousel -->
      <div class="w-full md:w-1/2 order-1 md:order-2">
        <Carousel images={januaryImages} />
      </div>
    </div>
  
    <!-- Retreat 2 - Ahangama -->
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-8 items-start">
      <!-- Text -->
      <div class="w-full md:w-1/2 font-sans text-left space-y-2 order-2 md:order-1">
        <h3 class="heading-sub italic mb-4 md:mb-6 text-black">
          Ahangama Februar
        </h3>
        <p class="text-black body-text">Einzelzimmer allein/Doppelbett geteilt <span class="float-right">520 / 340 €</span></p>
        <p class="text-black body-text">Dreier Zimmer: großes Bett alleine/geteilt <span class="float-right">440 / 290 €</span></p>
        <p class="text-black body-text">Dreierzimmer kleines Bett <span class="float-right">380 €</span></p>
        <hr class="my-3 border-accent-orange" />
        <p class="text-black body-text italic">plus Retreatgebühr</p>
        <p class="text-black body-text">Pro Teilnehmer <span class="float-right">1100 €</span></p>

        <div class="flex justify-start pt-6">
          <Cta label="Jetzt Buchen" dataRetreat="february" href="#kontakt" color="orange" />
        </div>
      </div>

  
      <!-- Carousel -->
      <div class="w-full md:w-1/2 order-1 md:order-2">
        <Carousel images={februaryImages} />
      </div>
    </div>
  </div>
</section>