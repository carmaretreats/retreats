---
import Carousel from '../components/Carousel.astro';

const hikkaduwaImages = [
  { src: '/images/home_january/Hikkaduwa.jpg', label: 'Hikkaduwa – Strand & Retreat' },
  { src: '/images/home_january/Hikkaduwa2.jpg', label: 'Hikkaduwa – Unterkunft' },
  { src: '/images/home_january/HikkaduwaYogashala2.jpg', label: 'Yogashala Hikkaduwa' }
];

const ahangamaImages = [
  { src: '/images/home_january/unrushed12.jpg', label: 'Unrushed Garden View' },
  { src: '/images/home_january/unrushedgardenview.jpg', label: 'Unrushed Villa' },
  { src: '/images/home_january/unrushedtriplebed.jpg', label: 'Zimmeransicht' }
];
---

<!-- UnterkunftPreise Section -->
<section id="unterkunft-preise" class="bg-cream-bg text-dark-brown w-full py-16 px-4">
  <!-- Section Title -->
  <div class="max-w-6xl mx-auto text-center mb-12">
    <h2 class="text-sm tracking-[0.2em] uppercase font-sora mb-4">
      Die Infos
    </h2>
    <h3 class="font-editorial italic text-3xl md:text-5xl">
      Unterkunft & Preise
    </h3>
  </div>

  <!-- Retreat 1 - Hikkaduwa -->
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-8 mb-16 items-start">
    <!-- Text -->
    <div class="w-full md:w-1/2 font-sans text-left space-y-2 order-2 md:order-1">
      <h4 class="font-editorial italic text-2xl mb-4">
        Hikkaduwa Januar
      </h4>
      <p>Einzelzimmer <span class="float-right">500 €</span></p>
      <p>Doppelbett im Dreibettzimmer <span class="float-right">350 €</span></p>
      <p>Stockbetten im Dreibettzimmer <span class="float-right">200 €</span></p>
      <hr class="my-3 border-accent-orange" />
      <p class="italic">plus Retreatgebühr</p>
      <p>Pro Teilnehmer <span class="float-right">900 €</span></p>
    </div>

    <!-- Carousel -->
    <div class="w-full md:w-1/2 order-1 md:order-2">
      <Carousel images={hikkaduwaImages} />
    </div>
  </div>

  <!-- Retreat 2 - Ahangama -->
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-8 items-start">
    <!-- Text -->
    <div class="w-full md:w-1/2 font-sans text-left space-y-2 order-2 md:order-1">
      <h4 class="font-editorial italic text-2xl mb-4">
        Ahangama Februar
      </h4>
      <p>Einzelzimmer alleine <span class="float-right">520 €</span></p>
      <p>Doppelbett geteilt <span class="float-right">340 €</span></p>
      <p>Dreierzimmer großes Bett alleine <span class="float-right">440 €</span></p>
      <p>Dreierzimmer großes Bett geteilt <span class="float-right">290 €</span></p>
      <p>Dreierzimmer kleines Bett <span class="float-right">380 €</span></p>
      <hr class="my-3 border-accent-orange" />
      <p class="italic">plus Retreatgebühr</p>
      <p>Pro Teilnehmer <span class="float-right">900 €</span></p>
    </div>

    <!-- Carousel -->
    <div class="w-full md:w-1/2 order-1 md:order-2">
      <Carousel images={ahangamaImages} />
    </div>
  </div>
</section>