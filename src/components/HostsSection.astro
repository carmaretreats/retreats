---
import CtaLink from './CtaLink.astro';
import data from '../content/retreats-page.json';

const hostsData = data.hostsSection;
---

<section id="deine-hosts" class="section bg-cream-bg">
  <div class="w-screen h-[60vh] overflow-hidden">
    <img 
      src={hostsData.image}
      alt={hostsData.imageAlt}
      class="w-full h-full object-cover object-center"
      loading="lazy"
      decoding="async"
    />
  </div>
  <div class="section-inner">
  
    <div class="w-full">
      <p class="uppercase section-label text-[var(--color-dark-brown)] mb-8">
        {hostsData.label}
      </p>
  
      <h2 style="font-family: 'EditorialOld', sans-serif; font-style: italic;" class="heading-main text-dark-brown">
        {hostsData.heading}
      </h2>
  
      {/* ✅ Renderizamos cada párrafo en su propia etiqueta <p> */}
      <p class="body-text text-dark-brown text-justify">{hostsData.paragraph1}</p>
      <p class="body-text text-dark-brown text-justify mb-8 whitespace-pre-line">
        {hostsData.paragraph2}
      </p>
  
      <div class="text-right">
        <CtaLink 
          label={hostsData.cta.label} 
          color="black" 
          href={hostsData.cta.href} 
        />
      </div>
    </div>
  </div>
</section>