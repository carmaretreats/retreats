---
import bgImage from '../assets/images/Terra-Rossa-Papier.png';
import data from '../content/retreats-page.json';

const gallery = data.gallerySection;
const images = gallery.images; // Esto ser√° un array con 6 objetos de imagen
---

<section id="gallery-section"
  class="section bg-cover bg-center bg-no-repeat mb-10 md:mb-16"
  style={`background-image: url(${bgImage.src});`}
>
  <div class="section-inner">
    <!-- üåø MOBILE VERSION -->
    <div class="block md:hidden max-w-6xl mx-auto space-y-4">
      <!-- Fila 1 -->
      <div class="flex flex-row flex-wrap gap-4">
        <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden">
          <img src={images[0].src} alt={images[0].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden">
          <img src={images[1].src} alt={images[1].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
      </div>
    
      <!-- Fila 2 (alta) -->
      <div class="flex flex-row flex-wrap gap-4">
        <div class="w-[calc(50%-0.5rem)] aspect-[3/4] overflow-hidden">
          <img src={images[2].src} alt={images[2].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="w-[calc(50%-0.5rem)] aspect-[3/4] overflow-hidden">
          <img src={images[3].src} alt={images[3].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
      </div>
    
      <!-- Fila 3 -->
      <div class="flex flex-row flex-wrap gap-4">
        <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden">
          <img src={images[4].src} alt={images[4].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden">
          <img src={images[5].src} alt={images[5].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
      </div>
    </div>
  
    <!-- üñ•Ô∏è DESKTOP VERSION -->
    <div class="hidden md:block space-y-6">
      <!-- Fila 1 -->
      <div class="flex gap-6">
        <div class="md:flex-1 overflow-hidden aspect-[4/3]">
          <img src={images[0].src} alt={images[0].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="md:flex-[0.7] overflow-hidden aspect-[4/3]">
          <img src={images[1].src} alt={images[1].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="md:flex-[0.9] overflow-hidden aspect-[4/3]">
          <img src={images[2].src} alt={images[2].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
      </div>
  
      <!-- Fila 2 -->
      <div class="flex gap-6">
        <div class="md:flex-[0.8] overflow-hidden aspect-[4/3]">
          <img src={images[3].src} alt={images[3].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="md:flex-1 overflow-hidden aspect-[4/3]">
          <img src={images[4].src} alt={images[4].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
        <div class="md:flex-[0.6] overflow-hidden aspect-[4/3]">
          <img src={images[5].src} alt={images[5].alt} class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" loading="lazy" decoding="async" />
        </div>
      </div>
    </div>
  </div>
</section>