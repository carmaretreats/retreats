---
import { Image } from 'astro:assets';
import bgImage from '../assets/images/Terra-Rossa-Papier.png';

import img1 from '../assets/images/juanca-paulino.jpg';
import img2 from '../assets/images/naomi-pal-dupe.jpeg';
import img3 from '../assets/images/zahra-nehme-dupe.jpeg';
import img4 from '../assets/images/retreat-jan-mini.jpeg';
import img5 from '../assets/images/retreat-feb-mini.jpg';
import img6 from '../assets/images/hosts-carmen-mareen.jpg';
---

<section
  class="w-full bg-cover bg-center bg-no-repeat py-16 px-6"
  style={`background-image: url(${bgImage.src});`}
>

  <!-- 🌿 MOBILE VERSION -->
<div class="block md:hidden max-w-6xl mx-auto space-y-4">
  <!-- Fila 1 -->
  <div class="flex flex-row flex-wrap gap-4">
    <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden rounded-2xl">
      <Image src={img1} alt="Gallery 1" class="w-full h-full object-cover" />
    </div>
    <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden rounded-2xl">
      <Image src={img2} alt="Gallery 2" class="w-full h-full object-cover" />
    </div>
  </div>

  <!-- Fila 2 (alta) -->
  <div class="flex flex-row flex-wrap gap-4">
    <div class="w-[calc(50%-0.5rem)] aspect-[3/4] overflow-hidden rounded-2xl">
      <Image src={img3} alt="Gallery 3" class="w-full h-full object-cover" />
    </div>
    <div class="w-[calc(50%-0.5rem)] aspect-[3/4] overflow-hidden rounded-2xl">
      <Image src={img4} alt="Gallery 4" class="w-full h-full object-cover" />
    </div>
  </div>

  <!-- Fila 3 -->
  <div class="flex flex-row flex-wrap gap-4">
    <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden rounded-2xl">
      <Image src={img5} alt="Gallery 5" class="w-full h-full object-cover" />
    </div>
    <div class="w-[calc(50%-0.5rem)] aspect-square overflow-hidden rounded-2xl">
      <Image src={img6} alt="Gallery 6" class="w-full h-full object-cover" />
    </div>
  </div>
</div>

  <!-- 🖥️ DESKTOP VERSION -->
  <div class="hidden md:block max-w-6xl mx-auto space-y-6">
    <!-- Fila 1 -->
    <div class="flex gap-6">
      <div class="md:flex-1 overflow-hidden rounded-2xl aspect-[4/3]">
        <Image src={img1} alt="Gallery 1" class="w-full h-full object-cover" />
      </div>
      <div class="md:flex-[0.7] overflow-hidden rounded-2xl aspect-[4/3]">
        <Image src={img2} alt="Gallery 2" class="w-full h-full object-cover" />
      </div>
      <div class="md:flex-[0.9] overflow-hidden rounded-2xl aspect-[4/3]">
        <Image src={img3} alt="Gallery 3" class="w-full h-full object-cover" />
      </div>
    </div>

    <!-- Fila 2 -->
    <div class="flex gap-6">
      <div class="md:flex-[0.8] overflow-hidden rounded-2xl aspect-[4/3]">
        <Image src={img4} alt="Gallery 4" class="w-full h-full object-cover" />
      </div>
      <div class="md:flex-1 overflow-hidden rounded-2xl aspect-[4/3]">
        <Image src={img5} alt="Gallery 5" class="w-full h-full object-cover" />
      </div>
      <div class="md:flex-[0.6] overflow-hidden rounded-2xl aspect-[4/3]">
        <Image src={img6} alt="Gallery 6" class="w-full h-full object-cover" />
      </div>
    </div>
  </div>
</section>