---
export interface Props { href?: string; label?: string }
const { href = '#kontakt', label = 'Mehr erfahren' } = Astro.props;
---
<a
  href={href}
  class="inline-block bg-white text-black px-8 py-3 rounded-full shadow-lg text-base md:text-lg"
  style="font-family: var(--font-sans); letter-spacing: .04em;"
>
  {label}
</a>