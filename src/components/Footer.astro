---
import { Image } from 'astro:assets';
import CarmaFullLogo from '../assets/images/logos/CarnaRetreats-Full-Weiß.png';
---

<footer class="bg-dark-brown text-white w-full px-6 py-16 text-center font-sans">
  <div class="max-w-5xl mx-auto flex flex-col items-center gap-6">

    <!-- Logo -->
    <Image
  src={CarmaFullLogo}
  alt="Carma Retreats Logo"
  widths={[200, 400, 600]} 
  sizes="(max-width: 640px) 150px, 300px"
  class="h-auto max-w-[200px] sm:max-w-[150px] lg:max-w-[300px] w-auto mx-auto"
  loading="eager"
/>

    <!-- Legal Links -->
    <div class="flex flex-wrap justify-center gap-6 text-sm text-white/80 mt-8">
      <a href="/impressum" class="hover:underline">Impressum</a>
      <a href="/datenschutz" class="hover:underline">Datenschutzerklärung</a>
      <a href="#cmpbox" class="hover:underline">Cookie-Einstellungen</a>
    </div>

    <!-- Optional bottom note -->
    <p class="text-xs text-white/60 mt-6">
      © {new Date().getFullYear()} Carma Retreats · Alle Rechte vorbehalten
    </p>

  </div>
</footer>