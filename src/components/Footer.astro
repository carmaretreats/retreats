---
import { Image } from 'astro:assets';
import CarmaLogo from '../assets/images/Carma-Wei√ü.png';
import SpiralIcon from '../assets/images/Markenzeichen-Weis.png';
---

<footer class="bg-dark-brown text-white w-full px-6 py-16 text-center font-sans">
  <div class="max-w-5xl mx-auto flex flex-col items-center gap-6">

    <!-- Logo -->
    <Image
      src={CarmaLogo}
      alt="Carma Retreats Logo"
      widths={[200, 400, 600]} 
      sizes="(max-width: 640px) 150px, 300px"
      class="h-16 sm:h-20 w-auto mx-auto"    
      loading="eager"
    />

    <!-- Subtitle: Retreats -->
    <p class="font-editorial italic text-lg sm:text-xl mt-2">
      Retreats
    </p>

    <!-- Spiral Icon -->
    <Image
      src={SpiralIcon}
      alt="Carma Spiral"
      widths={[50, 100, 150]}
      sizes="(max-width: 640px) 50px, 100px"
      class="h-6 sm:h-8 w-auto mx-auto mt-2"
      loading="lazy"
    />

    <!-- Placeholder links -->
    <p class="text-sm text-white/80 mt-6">
      (the respective / corresponding links)
    </p>

  </div>
</footer>