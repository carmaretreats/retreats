---
const {
  priceContent = [],
  includedContent = [],
  locationContent = 'In einem abgelegenen Küstendorf in Sri Lanka – mit Palmen, Hängematten und atemberaubendem Meerblick.'
} = Astro.props;
---

<div class="font-inter w-full max-w-2xl" x-data="{ openRoom: null }">
  <div class="divide-y divide-slate-200">

    <!-- Accordion item 1 -->
    <div class="py-2 border-b border-accent-orange">
      <h3>
        <button
          id="room-title-01"
          type="button"
          class="flex items-center w-full justify-between text-left py-2 text-dark-brown font-garamond italic text-xl md:text-2xl leading-[1.2]"
          @click="openRoom = openRoom === 1 ? null : 1"
          :aria-expanded="openRoom === 1"
          aria-controls="room-text-01"
        >
          <span><em>Was kostet es?</em></span>
          <span class="ml-4 text-xl transition-transform duration-200 text-dark-brown" x-text="openRoom === 1 ? '↑' : '↓'"></span>
        </button>
      </h3>
      <div
        id="room-text-01"
        role="region"
        aria-labelledby="room-title-01"
        class="grid text-base text-dark-brown font-sans text-[14px] xs:text-[14px] md:text-[18px] leading-[1.4] overflow-hidden transition-all duration-300 ease-in-out"
        :class="openRoom === 1 ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
      >
          <div class="overflow-hidden">
            <p class="whitespace-pre-line">{priceContent}</p>
          </div>
      </div>
    </div>

    <!-- Accordion item 2 -->
    <div class="py-2 border-b border-accent-orange">
      <h3>
        <button
          id="room-title-02"
          type="button"
          class="flex items-center w-full justify-between text-left py-2 text-dark-brown font-garamond italic text-xl md:text-2xl leading-[1.2]"
          @click="openRoom = openRoom === 2 ? null : 2"
          :aria-expanded="openRoom === 2"
          aria-controls="room-text-02"
        >
          <span><em>Was ist enthalten?</em></span>
          <span class="ml-4 text-xl transition-transform duration-200 text-dark-brown" x-text="openRoom === 2 ? '↑' : '↓'"></span>
        </button>
      </h3>
      <div
        id="room-text-02"
        role="region"
        aria-labelledby="room-title-02"
        class="grid text-base text-dark-brown font-sans text-[14px] xs:text-[14px] md:text-[18px] leading-[1.4] overflow-hidden transition-all duration-300 ease-in-out"
        :class="openRoom === 2 ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
      >
        <div class="overflow-hidden">
            <p class="whitespace-pre-line">{includedContent}</p>
        </div>
      </div>
    </div>

    <!-- Accordion item 3 -->
    <div class="py-2 border-b border-accent-orange">
      <h3>
        <button
          id="room-title-03"
          type="button"
          class="flex items-center w-full justify-between text-left py-2 text-dark-brown font-garamond italic text-xl md:text-2xl leading-[1.2]"
          @click="openRoom = openRoom === 3 ? null : 3"
          :aria-expanded="openRoom === 3"
          aria-controls="room-text-03"
        >
          <span><em>Wo ist es?</em></span>
          <span class="ml-4 text-xl transition-transform duration-200 text-dark-brown" x-text="openRoom === 3 ? '↑' : '↓'"></span>
        </button>
      </h3>
      <div
        id="room-text-03"
        role="region"
        aria-labelledby="room-title-03"
        class="grid text-base text-dark-brown font-sans text-[14px] xs:text-[14px] md:text-[18px] leading-[1.4] overflow-hidden transition-all duration-300 ease-in-out"
        :class="openRoom === 3 ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
      >
        <div class="overflow-hidden">
              <p class="whitespace-pre-line">{locationContent}</p>
          </div>
      </div>
    </div>

  </div>
</div>