---
const {
  priceContent = [],
  includedContent = [],
  locationContent = 'In einem abgelegenen Küstendorf in Sri Lanka – mit Palmen, Hängematten und atemberaubendem Meerblick.'
} = Astro.props;
---

<div class="font-inter w-full max-w-2xl">
  <div class="divide-y divide-slate-200">

    <!-- Accordion item 1 -->
    <div x-data="{ expanded: false }" class="py-2 border-b border-accent-orange">
      <h3>
        <button
          id="room-title-01"
          type="button"
          class="flex items-center justify-between w-full text-left text-lg md:text-xl italic font-semibold py-2 text-black"
          style="font-family: var(--font-editorial);"
          @click="expanded = !expanded"
          :aria-expanded="expanded"
          aria-controls="room-text-01"
        >
          <span><em>Was kostet es?</em></span>
          <span class="ml-4 text-xl transition-transform duration-200 text-black" x-text="expanded ? '↑' : '↓'"></span>
        </button>
      </h3>
      <div
        id="room-text-01"
        role="region"
        aria-labelledby="room-title-01"
        class="grid text-base text-black text-base md:text-lg leading-relaxed overflow-hidden transition-all duration-300 ease-in-out"
        :class="expanded ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
      >
        {priceContent.length > 0 && (
          <div class="overflow-hidden">
            {priceContent.map((p) => <p>{p}</p>)}
          </div>
        )}
      </div>
    </div>

    <!-- Accordion item 2 -->
    <div x-data="{ expanded: false }" class="py-2 border-b border-accent-orange">
      <h3>
        <button
          id="room-title-02"
          type="button"
          class="flex items-center justify-between w-full text-left text-lg md:text-xl italic font-semibold py-2 text-black"
          style="font-family: var(--font-editorial);"
          @click="expanded = !expanded"
          :aria-expanded="expanded"
          aria-controls="room-text-02"
        >
          <span><em>Was ist enthalten?</em></span>
          <span class="ml-4 text-xl transition-transform duration-200 text-black" x-text="expanded ? '↑' : '↓'"></span>
        </button>
      </h3>
      <div
        id="room-text-02"
        role="region"
        aria-labelledby="room-title-02"
        class="grid text-base text-black text-base md:text-lg leading-relaxed overflow-hidden transition-all duration-300 ease-in-out"
        :class="expanded ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
      >
        {includedContent.length > 0 && (
          <div class="overflow-hidden">
            {includedContent.map((p) => <p>{p}</p>)}
          </div>
        )}
      </div>
    </div>

    <!-- Accordion item 3 -->
    <div x-data="{ expanded: false }" class="py-2 border-b border-accent-orange">
      <h3>
        <button
          id="room-title-03"
          type="button"
          class="flex items-center justify-between w-full text-left text-lg md:text-xl italic font-semibold py-2 text-black"
          style="font-family: var(--font-editorial);"
          @click="expanded = !expanded"
          :aria-expanded="expanded"
          aria-controls="room-text-03"
        >
          <span><em>Wo ist es?</em></span>
          <span class="ml-4 text-xl transition-transform duration-200 text-black" x-text="expanded ? '↑' : '↓'"></span>
        </button>
      </h3>
      <div
        id="room-text-03"
        role="region"
        aria-labelledby="room-title-03"
        class="grid text-base text-black text-base md:text-lg leading-relaxed overflow-hidden transition-all duration-300 ease-in-out"
        :class="expanded ? 'grid-rows-[1fr] opacity-100' : 'grid-rows-[0fr] opacity-0'"
      >
        {locationContent.length > 0 && (
          <div class="overflow-hidden">
            {locationContent.map((p) => <p>{p}</p>)}
          </div>
        )}
      </div>
    </div>

  </div>
</div>