---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

const {
  images = [],
}: {
  images: { src: ImageMetadata; label: string }[];
} = Astro.props;
---

<div class="w-full flex flex-col justify-start items-center">
  <div 
    x-data={`{ activeSlide: 0, totalSlides: ${images.length} }`} class="max-w-4xl mx-auto relative">

    {images.map((slide, index) => (
      <div
        class="relative h-full w-full overflow-hidden aspect-square"
        x-show={`activeSlide === ${index}`}
      >
        <Image
          src={slide.src}
          alt={slide.label || `Yoga Retreat Bild-${index + 1}`}
          widths={[400, 800, 1200]}
          formats={['avif', 'webp', 'jpeg']}
          class="w-full h-full object-cover object-center"
          loading="lazy"
        />
        {slide.label && (
          <div class="absolute top-0 left-0 w-full bg-[rgba(0,0,0,0.4)] text-white text-center py-2 text-sm font-sans">
            {slide.label}
          </div>
        )}
      </div>
    ))}

    <!-- Prev/Next Arrows -->
    <div class="absolute inset-0 flex">
      <div class="flex items-center justify-start w-1/2">
        <button 
          class="bg-[rgba(255,255,255,0.7)] text-dark-brown hover:bg-accent-orange hover:text-white font-bold rounded-full w-10 h-10 flex items-center justify-center shadow-md transition"
          x-on:click="activeSlide = activeSlide === 0 ? totalSlides - 1 : activeSlide - 1">
          &#8592;
        </button>
      </div>
      <div class="flex items-center justify-end w-1/2">
        <button 
          class="bg-[rgba(255,255,255,0.7)] text-dark-brown hover:bg-accent-orange hover:text-white font-bold rounded-full w-10 h-10 flex items-center justify-center shadow-md transition"
          x-on:click="activeSlide = activeSlide === totalSlides - 1 ? 0 : activeSlide + 1">
          &#8594;
        </button>
      </div>        
    </div>

    <!-- Dots -->
    <div class="absolute bottom-4 w-full flex items-center justify-center px-4">
      {images.map((_, index) => (
        <button aria-label={`Bild-${index + 1}`}
          class="w-3 h-3 mx-1 rounded-full transition-colors duration-200 ease-out"
          :class={`activeSlide === ${index} ? 'bg-[var(--color-accent-orange)]' : 'bg-[var(--color-dark-brown)]'`}
          x-on:click={`activeSlide = ${index}`}
        ></button>
      ))}
    </div>

  </div>
</div>