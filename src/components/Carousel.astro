<div class="w-full flex flex-col justify-center items-center">
  <div 
    class="max-w-4xl mx-auto relative"
    x-data="{ activeSlide: 0, slides: [
    '/images/home_january/bathroom.jpg',
  '/images/home_january/bathroom2.jpg',
  '/images/home_january/Unrushedabove.jpg',
  '/images/home_january/Unrushed1.jpg',
  '/images/home_january/Unrushed2.jpg'
    ] }"
  >
    <!-- Slides -->
    <template x-for="(slide, index) in slides" :key="slide">
      <div
        x-show="activeSlide === index"
        class="h-full w-full overflow-hidden aspect-square"
      >
        <img 
          :src="slide"
          alt="Slide image"
          class="w-full h-full object-cover"
        />
      </div>
    </template>
    
    <!-- Prev/Next Arrows -->
    <div class="absolute inset-0 flex">
      <div class="flex items-center justify-start w-1/2">
        <button 
          class="bg-transparent text-dark-brown hover:text-accent-orange font-bold hover:shadow-lg rounded-full w-10 h-10"
          x-on:click="activeSlide = activeSlide === 0 ? slides.length - 1 : activeSlide - 1">
          &#8592;
        </button>
      </div>
      <div class="flex items-center justify-end w-1/2">
        <button 
          class="bg-transparent text-dark-brown hover:text-accent-orange font-bold rounded-full w-10 h-10"
          x-on:click="activeSlide = activeSlide === slides.length - 1 ? 0 : activeSlide + 1">
          &#8594;
        </button>
      </div>        
    </div>

    <!-- Dots -->
    <div class="absolute bottom-4 w-full flex items-center justify-center px-4">
      <template x-for="(slide, index) in slides" :key="index">
        <button
          class="w-3 h-3 mx-1 rounded-full transition-colors duration-200 ease-out"
          :class="{
            'bg-accent-orange': activeSlide === index,
            'bg-dark-brown': activeSlide !== index 
          }" 
          x-on:click="activeSlide = index"
        ></button>
      </template>
    </div>
  </div>
</div>