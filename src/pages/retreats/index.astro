---
import Layout from '../../layouts/Layout.astro';
const result = Astro.getActionResult(actions.send);
if (result?.data) {
  return Astro.redirect("/thanks");
}
import Hero from '../../components/Hero.astro';
import ContactSection from '../../components/ContactSection.astro';
import Retreats from '../../components/Retreats.astro';
import { actions } from "astro:actions";
import HeroWelcome from '../../components/HeroWelcome.astro';
import ImagineSection from '../../components/ImagineSection.astro';
import NextRetreats from '../../components/NextRetreats.astro';
import RetreatHighlights from '../../components/RetreatHighlights.astro';
import UnterkunftPreise from '../../components/UnterkunftPreise.astro';
import EinTag from '../../components/EinTag.astro';
import HostsSection from '../../components/HostsSection.astro';
import GallerySection from '../../components/GallerySection.astro';
import AboutSection from '../../components/AboutSection.astro';
import TestimonialSlider from '../../components/TestimonialSlider.astro'; 
import FaqAccordion from '../../components/FaqAccordion.astro';
import MiniGallery from '../../components/MiniGallery.astro';
import data from '../../content/retreats-page.json';
---
<Layout>
  <main class="min-h-screen flex flex-col items-center justify-center bg-cream-bg">
    <Hero />
    <HeroWelcome />
    <ImagineSection />
    <Retreats />
    <RetreatHighlights />
    <NextRetreats />
    <EinTag />
    <UnterkunftPreise />
    <HostsSection />
    <GallerySection />
    {data.aboutSection.people.map(person => (
      <AboutSection 
        subtitle={person.subtitle}
        title={person.title}
        text={person.text}
        image={person.image}
        imageAlt={person.imageAlt}
        reverse={person.reverse}
      />
    ))}
    <TestimonialSlider testimonials={data.testimonialSection.testimonials} />
    <FaqAccordion />
    <MiniGallery />
    <ContactSection />
  </main>
</Layout>